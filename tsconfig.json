{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "es2020"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    // ðŸ”‘ Alias
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],               // cobre tudo (components, data, pages, etc)
      "@/components/*": ["components/*"],
      "@/data/*": ["data/*"]
    },

    // (opcional) para Next 13+ com React 18
    "forceConsistentCasingInFileNames": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
